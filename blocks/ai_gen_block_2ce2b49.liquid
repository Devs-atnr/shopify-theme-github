{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-footer-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-footer-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: 30px;
    margin-bottom: 40px;
  }

  .ai-footer-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-footer-column-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0;
    color: {{ block.settings.heading_color }};
  }

  .ai-footer-links-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .ai-footer-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.text_size }}px;
    transition: color 0.3s ease;
  }

  .ai-footer-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-footer-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0;
  }

  .ai-footer-social-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    margin-top: 8px;
    flex-wrap: wrap;
  }

  .ai-footer-social-link-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background-color: {{ block.settings.social_bg_color }};
    color: {{ block.settings.social_icon_color }};
    border-radius: 50%;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .ai-footer-social-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.social_hover_bg_color }};
  }

  .ai-footer-social-link-{{ ai_gen_id }} svg {
    width: 18px;
    height: 18px;
  }

  .ai-footer-bottom-{{ ai_gen_id }} {
    border-top: 1px solid {{ block.settings.border_color }};
    padding-top: 24px;
    text-align: {{ block.settings.copyright_alignment }};
  }

  .ai-footer-copyright-{{ ai_gen_id }} {
    font-size: {{ block.settings.copyright_size }}px;
    color: {{ block.settings.copyright_color }};
    margin: 0;
  }

  @media screen and (max-width: 768px) {
    .ai-footer-content-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: 25px;
      margin-bottom: 30px;
    }

    .ai-footer-social-{{ ai_gen_id }} {
      justify-content: center;
    }
  }
{% endstyle %}

