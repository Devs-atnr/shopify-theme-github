{% schema %}
{
  "name": "Craftsmanship & Quality",
  "settings": [
    {"type": "text",
   "id": "custom_class",
   "label": "Custom CSS Class (optional)" },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Craftsmanship & Quality"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Feature Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Feature description goes here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Craftsmanship & Quality",
      "category": "Custom",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "heading": "Master Artisans",
            "text": "Every piece crafted by masters with generations of expertise"
          }
        },
        {
          "type": "feature",
          "settings": {
            "heading": "Finest Materials",
            "text": "Only the most exceptional gems and precious metals"
          }
        },
        {
          "type": "feature",
          "settings": {
            "heading": "Perfect Detail",
            "text": "Meticulous attention to every element of design"
          }
        }
      ]
    }
  ],
  "max_blocks": 6
}
{% endschema %}

{% style %}
  
  .sec-cq {
    background: #f5f5dc70;
}

.feature-heading::before {
    content: "";
    display: block;
    width: 80px; /* Adjust this to change border length */
    height: 2px; /* Adjust this to change border thickness */
    background: #D4AF37; /* Border color */
    margin: 0 auto 40px auto; /* Centers the border and adds space below */
  }
  .craftsmanship-section {
    padding: 50px 20px;
    text-align: center;
    max-width: 1580px;
    margin: 0 auto;
  }
  
  .craftsmanship-heading {
    font-size: 28px;
    margin-bottom: 40px;
    font-weight: bold;
  }
  
  .features-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 30px;
  }
  
  .feature-block {
   width: calc(33.33% - 20px); /* 3 columns accounting for gap */
    min-width: 300px; /* Minimum width before wrapping */
    padding: 20px;
    box-sizing: border-box;
  }
  
  .feature-heading {
    font-size: 20px;
    margin-bottom: 15px;
    font-weight: 600;
  }
  
  .feature-text {
    font-size: 16px;
    line-height: 1.5;
  }
  
  @media (max-width: 768px) {
    .features-container {
      flex-direction: column;
      align-items: center;
    }
    
    .feature-block {
      flex: 1 1 auto;
      max-width: 100%;
    }
  }
{% endstyle %}

<div class="{{ section.settings.custom_class }}">
 <div class="craftsmanship-section">
  <h2 class="craftsmanship-heading">{{ section.settings.main_heading }}</h2>
  
  <div class="features-container">
    {% for block in section.blocks %}
      <div class="feature-block" {{ block.shopify_attributes }}>
        <h3 class="feature-heading">{{ block.settings.heading }}</h3>
        <p class="feature-text">{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
  </div>

</div>