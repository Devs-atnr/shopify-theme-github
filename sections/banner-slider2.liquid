{% schema %}
  {
    "name": "Section name",
    "settings": [
{"type": "text",
   "id": "custom_class",
   "label": "Custom CSS Class (optional)" }


    ],
    "blocks": [
      {
        "type": "banner-list", "name":"slides", 
      "settings":[ {"type": "text", "id": "banner_heading", "label": "banner heading", "default":"<h4>Explore our products</h4>"},
          {
          "type": "textarea",
          "id": "text-do",
          "label": "Text"
        },
         {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image 1"},
         {"type":"text", "id":"button_text",  "label": "Button Text" },
        {"type":"url", "id":"button_link",  "label": "Button Link" }
       
          ]
    }
    ],
    "presets": [
                   {"name": "banner slider 2"} ]
  }
{% endschema %}

<style>
.home-banner .inner-one { height: 43vw !important; }



    swiper-container {
      /* width: 100%; */
      height: 100%;
    }

    swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #faf7f2;
      display: flex;
      justify-content: center;
      align-items: center;
      
    }

    swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }


.inner-one {
    background-size: contain;
     margin-bottom: -15px;
    background-position: top;
    /* object-fit: cover; */
    width: 100%;
    padding: 0px 85px;
   height: 35vw;
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    background-repeat: no-repeat;
    justify-content: center;
}

.inner-one   h1 {
    font-size: 4rem;
    color: #fff;
    text-transform: capitalize;
      text-align: left;
   width: 35%;
} 
a.slide-btn {
    {% comment %} padding: 10px 20px; {% endcomment %}
    color: #fff;
    border-bottom: 1px solid #fff;
   font-size: 18px;
    line-height: 32px;
}
  {% comment %} a.slide-btn:hover {
   background: #A2732A;
     border: 2px solid #a47328;
} {% endcomment %}

   .fea-text {
     color: #fff;
    font-size: 16px;
    line-height: 1.5;
  }

 @media (max-width: 768px) {
  .inner-one {
     min-height: 350px;
    /* height: auto; */
    padding: 0px 20px;
    background-size: cover;
    background-position: center;
    justify-content: center;
  }

  .inner-one h1 {
    font-size: 2rem;
    width: 100%;
  }

  a.slide-btn {
    font-size: 14px;
    padding: 0px 0px;
  }
}

@media (min-width: 769px) and (max-width: 1024px) {
  .inner-one {
   min-height: 500px;
    padding: 40px 40px;
    background-size: cover;
  }

  .inner-one h1 {
    font-size: 3rem;
    width: 60%;
  }
}

/* @media (min-width: 1820px) and (max-width: 1920px) { .inner-one {  height: 33vw;}   }
@media (min-width: 1720px) and (max-width: 1820px) { .inner-one {  height: 35vw;}   } 
@media (min-width: 1620px) and (max-width: 1720px) { .inner-one {  height: 37vw;}   }     */
  
 
  </style>


  <swiper-container class="mySwiper {{ section.settings.custom_class }}" autoplay-delay="2500" autoplay-disable-on-interaction="false" effect="fade">
{% for block in section.blocks %} 
    <swiper-slide >
         
      <div  class="inner-one " style="background-image: url({{ block.settings.background_image | img_url: '1800x' }});" > 
      
        <h1>{{block.settings.banner_heading}}</h1> 
        <p class="fea-text">{{ block.settings.text-do }}</p>
        <a class="slide-btn" href="{{block.settings.button_link }}">{{block.settings.button_text}}</a>
       
      </div>   
          
    </swiper-slide>
     {% endfor %}

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>

