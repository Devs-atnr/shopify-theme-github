{% schema %}
{
  "name": "clickable banner two",
  "settings": [
   {"type": "text",
    "id": "custom_class",
    "label": "Custom CSS Class (optional)" },

    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image 1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading 1",
      "default": "Your Heading Here"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL 1"
    },

     {
      "type": "image_picker",
      "id": "background_imagetwo",
      "label": "Background Image 2"
    },
    {
      "type": "text",
      "id": "headingtwo",
      "label": "Heading 2",
      "default": "Your Heading Here"
    },
    {
      "type": "url",
      "id": "link_urltwo",
      "label": "Link URL 2"
    },
  ],
  "presets": [
    {
      "name": "clickable banner two",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
.sec-click {
    margin-top: -40px;
    padding-bottom: 50px;
}
.col-sec3two.page-width {
    display: grid;
    justify-content: center;
    grid-template-columns: 1fr 1fr ;
    gap: 25px;
    flex-wrap: wrap;
}

  .image-banner-sectiontwo {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
    background-position: center;
    background-color: #f5f5f5;
  }

.image-banner-sectiontwo {
    position: relative;
    /* width: 495px; */
    /* min-height: 100vh; */
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
    background-position: center;
    background-color: #f5f5f5;
    max-width: 100%;
    border-radius: 0;
    margin: 0;
    border-radius: 0;
    min-height: 193px;
 
   
}

  .image-banner-sectiontwo a {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
  }

  .banner-headingtwo {
 color: #ffffff;
    font-size: 3.5rem;
    text-align: left;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    z-index: 2;
    padding: 1.5vw;
    font-weight: 300;
    margin-top: 5vw;
  }

  @media screen and (max-width: 768px) {
    .col-sec3two.page-width {
      grid-template-columns: 1fr  ;}
    
    .image-banner-sectiontwo {
      min-height: 20vh;
    }
    
    .banner-headingtwo {
      font-size: 1.9rem;
    }
  }
</style>

<div class="col-sec3two page-width {{ section.settings.custom_class }}">
 
  <div class="image-banner-sectiontwo" style="background-image: url({{ section.settings.background_image | img_url: '1800x' }});">
  <a href="{{ section.settings.link_url }}" class="banner-linktwo">
    <h1 class="banner-headingtwo">{{ section.settings.heading }}</h1>
  </a>
  </div>

    <div class="image-banner-sectiontwo" style="background-image: url({{ section.settings.background_imagetwo | img_url: '1800x' }});">
  <a href="{{ section.settings.link_urltwo }}" class="banner-linktwo">
    <h1 class="banner-headingtwo">{{ section.settings.headingtwo }}</h1>
  </a>
  </div>
</div>