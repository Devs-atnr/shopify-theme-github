<style>
  .col-parentt {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 5rem;
    padding-top: 20px;
    padding-bottom: 20px;
    align-items: center;
    text-align: center;
  }

  .col-one,
  .col-three {
    display: flex;
    align-items: center;
  }

  .col-one hr,
  .col-three hr {
    width: 100%;
    border: none;
    height: 1px;
    background: #000;
  }

  .col-two {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* âœ… Responsive Fix */
  @media screen and (max-width: 768px) {
    .col-parentt {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .col-one,
    .col-three {
      display: none; /* Hide lines on small screens */
    }

    .col-two h2 {
      font-size: 24px;
    }
  }
</style>


