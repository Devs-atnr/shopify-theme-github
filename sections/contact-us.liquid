{%- comment -%} contact-us.liquid {%- endcomment -%}
{% schema %}
{
  "name": "Contact Us",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Contact Us"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Ask us anything! We're here to help."
    },
    {
      "type": "header",
      "content": "Live Help Settings"
    },
    {
      "type": "text",
      "id": "live_help_text",
      "label": "Live Help Text",
      "default": "If you have an issue or question that requires immediate assistance, you can click the button below to chat live with a Customer Service representative. If we aren't available, drop us an email to the left and we will get back to you within 24:36 hours!"
    },
    {
      "type": "text",
      "id": "phone_text",
      "label": "Phone Text",
      "default": "TEXT: 059 617 2155"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "Contactus@Lemoje.com"
    },
    {
      "type": "header",
      "content": "Company Info"
    },
    {
      "type": "text",
      "id": "company_name",
      "label": "Company Name",
      "default": "Al Moallim United Co."
    },
    {
      "type": "text",
      "id": "city",
      "label": "City",
      "default": "Jeddah"
    },
    {
      "type": "text",
      "id": "country",
      "label": "Country",
      "default": "Saudi Arabia"
    },
    {
      "type": "header",
      "content": "Opening Hours"
    },
    {
      "type": "text",
      "id": "weekdays_hours",
      "label": "Weekdays Hours",
      "default": "SUN to THU: 11:00AM - 5:00PM"
    },
    {
      "type": "text",
      "id": "saturday_hours",
      "label": "Saturday Hours",
      "default": "SAT: 1:00PM - 4:00PM"
    },
    {
      "type": "header",
      "content": "Form Settings"
    },
    {
      "type": "text",
      "id": "submit_text",
      "label": "Submit Button Text",
      "default": "SUBMIT CONTACT"
    }
  ],
  "presets": [
    {
      "name": "Contact Us",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<style>
  /* Success message styling */
.form-success {
  background-color: #dff0d8;
  color: #3c763d;
  padding: 15px;
  margin-bottom: 20px;
  border: 1px solid #d6e9c6;
  border-radius: 4px;
}

/* Error message styling */
.form-errors {
  background-color: #f2dede;
  color: #a94442;
  padding: 15px;
  margin-bottom: 20px;
  border: 1px solid #ebccd1;
  border-radius: 4px;
}
    .opening-hours #Icons {
    width: 20px;
    height: 20px;
}
  .contact-method #Icons {
    width: 20px;
    height: 20px;
}
  .company-info #Icons {
    width: 20px;
    height: 20px;
}
  .contact-us-section {
    /* max-width: 1200px; */
    margin: 0 auto;
    padding: 40px 20px;
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
     font-size: 14px;
  }
  
  .contact-form-container {
    flex: 1;
    min-width: 300px;
  }
  
  .contact-info-container {
    flex: 1;
    min-width: 300px;
  }
  
  .contact-heading {
    font-size: 2.5rem;
    margin-bottom: 20px;
    color: #333;
  }
  
  .contact-subheading {
   font-size: 14px;
    margin-bottom: 30px;
    
  }
  
  .form-group {
    margin-bottom: 20px;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: bold;
  }
  
  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 18px;
    border: 1px solid #ddd;
    font-size: 14px;
  }
  
  .form-group textarea {
    min-height: 120px;
  }
  
  .required-field::after {
    content: " *";
    color: red;
  }
  
.submit-btn {
    background-color: #000;
    color: #fff;
    border: none;
    padding: 18px 30px;
    font-size: 14px;
    cursor: pointer;
    text-transform: uppercase;
    width: 40%;
    margin-top: 15px;
}
  
  .submit-btn:hover {
    background: #a2732a;
  }
  
  .live-help-box {
    background-color: #f9f9f9;
    padding: 20px;
    margin-top: 30px;
  
  }
  
  .live-help-text {
    margin-bottom: 20px;
    line-height: 1.6;
  }
  
  .contact-method {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
     gap: 10px;
  }
  
  .contact-method i {
    margin-right: 10px;
    color: #666;
  }
  
  .company-info {
       margin-top: 30px;
    line-height: 1.6;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 10px;
    padding: 0 20px;
  }
  
  
  .opening-hours {

    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 10px;
    line-height: 1.6;
    font-size: 14px;
    padding: 0 20px;
  }
  
  @media (max-width: 768px) {
    .submit-btn {
    width: 50%;
}
    .contact-us-section {
      flex-direction: column;
      gap: 30px;
    }
    
    .contact-form-container,
    .contact-info-container {
      width: 100%;
    }
  }
</style>

<div class="contact-us-section page-width">
  <div class="contact-form-container">
    <h1 class="contact-heading">{{ section.settings.heading }}</h1>
    <p class="contact-subheading">{{ section.settings.subheading }}</p>
    
 {% form 'contact', class: 'contact-form' %}
  {% if form.posted_successfully? %}
    <div class="form-success">
      Thank you for your message! We'll get back to you soon.
    </div>
  {% endif %}
      
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="contact[name]">
      </div>
      
      <div class="form-group">
        <label for="phone">Phone Number</label>
        <input type="tel" id="phone" name="contact[phone]">
      </div>
      
      <div class="form-group">
        <label for="email" class="required-field">Email</label>
        <input type="email" id="email" name="contact[email]" required>
      </div>
      
      <div class="form-group">
        <label for="comment" class="required-field">Comment</label>
        <textarea id="comment" name="contact[body]" required></textarea>
      </div>
      
      <button type="submit" class="submit-btn">{{ section.settings.submit_text }}</button>
    {% endform %}
  </div>
  
  <div class="contact-info-container">
    <div class="live-help-box">
      <h3>Live Help</h3>
      <p class="live-help-text">{{ section.settings.live_help_text }}</p>
      
