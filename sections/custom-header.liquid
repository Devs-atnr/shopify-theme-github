  {% if main_menu != blank and main_menu.links.size > 0 %}
  <div class="mega-menu-shell">
    <ul class="main-nav-mega">
      {% for link in main_menu.links %}
        {%- assign matched_block = nil -%}
        {% for block in section.blocks %}
          {%- assign block_title = block.settings.trigger_title | strip | downcase -%}
          {%- assign link_title  = link.title | strip | downcase -%}
          {% if block.type == 'mega_block' and block_title == link_title %}
            {% assign matched_block = block %}
            {% break %}
          {% endif %}
        {% endfor %}

        <li class="main-nav-item-mega {% if matched_block %}has-mega{% endif %}">
          <a href="{{ link.url }}">{{ link.title }}</a>

          {% if matched_block and matched_block.settings.mega_menu_handle != blank %}
            {% assign menu = matched_block.settings.mega_menu_handle %}
            {% if menu.links.size > 0 %}
              <div class="mega-menu-panel">
                <div class="mega-columns">
                  <!-- LEFT COLUMN : PARENTS -->
                  <ul class="mega-parent">
                    {% for parent in menu.links %}
                      <li 
                        class="
                          {% if forloop.first %}is-active{% endif %}
                          {% if parent.links.size > 0 %} has-children{% endif %}
                        "
                        data-parent="{{ forloop.index0 }}"
                      >
                        <a href="{{ parent.url }}" class="mega-link">{{ parent.title }}</a>
                      </li>
                    {% endfor %}
                  </ul>

                  <!-- MIDDLE COLUMN : CHILDREN -->
                  <div class="mega-child-wrapper">
                    {% for parent in menu.links %}
                      <ul class="mega-child {% if forloop.first %}is-active{% endif %}"
                          data-parent="{{ forloop.index0 }}">
                        {% for child in parent.links %}
                          <li class="{% if forloop.parentloop.first and forloop.first %}is-active{% endif %} {% if child.links.size > 0 %}has-grandchildren{% endif %}"
                              data-parent="{{ forloop.parentloop.index0 }}"
                              data-child="{{ forloop.index0 }}">
                            <a href="{{ child.url }}" class="mega-link">{{ child.title }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    {% endfor %}
                  </div>

                  <!-- RIGHT COLUMN : SUB-CHILDREN -->
                  <div class="mega-grandchild-wrapper">
                    {% for parent in menu.links %}
                      {% for child in parent.links %}
                        <ul class="mega-grandchild
                            {% if forloop.parentloop.first and forloop.first %}is-active{% endif %}"
                            data-parent="{{ forloop.parentloop.index0 }}"
                            data-child="{{ forloop.index0 }}">
                          {% for sub in child.links %}
                            <li><a href="{{ sub.url }}">{{ sub.title }}</a></li>
                          {% endfor %}
                        </ul>
                      {% endfor %}
                    {% endfor %}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}

  <div class="announce-bar desktop-only">
    <h1 class="header__title">{{ section.settings.title }}</h1>
  </div>
