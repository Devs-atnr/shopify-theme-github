  gap: 2rem;
  align-items: center;
}

.header-item {
  display: flex;
  align-items: center;
  gap: 0.8rem;
}

.header-item a {
  text-transform: capitalize;
  font-weight: 400;
  color: #000 !important;
  font-size: 13px;
}

.header-item .icon {
  color: #a16c2f;
