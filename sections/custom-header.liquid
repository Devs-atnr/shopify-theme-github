/* ==================================== */
/* MOBILE HAMBURGER MENU CSS - FIXED */
/* ==================================== */

/* Hamburger Button */
.hamburger-btn {
  display: none;
  background: none;
  border: none;
  cursor: pointer;
  padding: 10px;
  z-index: 1001;
  position: relative;
  margin-right: 15px;
}

.hamburger-btn span {
  display: block;
  width: 25px;
  height: 2px;
  background: #000;
  margin: 5px 0;
  transition: 0.3s;
  border-radius: 2px;
}

.hamburger-btn.active span:nth-child(1) {
  transform: rotate(45deg) translate(5px, 5px);
}

.hamburger-btn.active span:nth-child(2) {
  opacity: 0;
}

.hamburger-btn.active span:nth-child(3) {
  transform: rotate(-45deg) translate(7px, -6px);
}

/* Mobile Drawer */
.mobile-drawer {
  position: fixed;
  top: 0;
  left: -100%;
  width: 85%;
  max-width: 350px;
  height: 100%;
  background: #fff;
  z-index: 1000;
  transition: left 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  overflow-y: auto;
  box-shadow: 2px 0 20px rgba(0,0,0,0.15);
}

.mobile-drawer.active {
  left: 0;
}

/* Drawer Overlay */
.drawer-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s, visibility 0.3s;
}

.drawer-overlay.active {
  opacity: 1;
  visibility: visible;
}

/* Menu Levels */
.mobile-menu-level {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  overflow-y: auto;
}

.mobile-menu-level[data-level="0"] {
  transform: translateX(0);
}

.mobile-menu-level[data-level="1"] {
  transform: translateX(100%);
}

.mobile-menu-level[data-level="2"] {
  transform: translateX(200%);
}

.mobile-menu-level[data-level="3"] {
  transform: translateX(300%);
}

.mobile-menu-level.active {
  transform: translateX(0) !important;
}

/* Menu Header */
.menu-header {
  display: flex;
  align-items: center;
  padding: 20px 15px;
  background: #f9f9f9;
  border-bottom: 1px solid #eee;
  position: sticky;
  top: 0;
  z-index: 10;
}

.back-btn {
  background: none;
  border: none;
  font-size: 15px;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 8px;
  color: #a2732a;
  padding: 5px 10px;
  font-weight: 500;
}

.menu-title {
  font-size: 16px;
  font-weight: 600;
  margin: 0 auto;
  color: #000;
  text-transform: uppercase;
}

/* Menu Content */
.menu-content {
  padding: 15px;
}

/* Menu Lists */
.mobile-menu-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.mobile-menu-item {
  border-bottom: 1px solid #f0f0f0;
}

.mobile-menu-item:last-child {
  border-bottom: none;
}

.mobile-menu-link {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 0;
  text-decoration: none;
  color: #333;
  font-size: 15px;
  font-weight: 400;
  width: 100%;
  text-align: left;
  background: none;
  border: none;
  cursor: pointer;
  font-family: inherit;
}

.mobile-menu-link .arrow {
  font-size: 18px;
  color: #a2732a;
  opacity: 0.8;
}

.mobile-menu-link:hover {
  color: #a2732a;
}

/* Level Indicators */
.level-indicators {
  display: flex;
  justify-content: center;
  gap: 6px;
  margin: 15px 0;
  padding: 0 15px;
}

.level-dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: #ddd;
  transition: background 0.3s;
}

.level-dot.active {
  background: #a2732a;
  transform: scale(1.2);
}

/* Responsive */
@media (max-width: 1199px) {
  .main-nav-mega {
    gap: 1.5rem;
  }
}

@media (max-width: 991px) {
  /* Hide desktop mega menu on mobile */
  .mega-menu-shell {
    display: none !important;
  }
  
  /* Show hamburger button */
  .hamburger-btn {
    display: block;
  }
  
  /* Adjust header layout for mobile */
  .parentt {
    grid-template-columns: auto 1fr auto;
    align-items: center;
    padding: 10px 0;
    gap: 10px;
  }
  
  .one {
    order: 1;
    justify-content: flex-start;
  }
  
  .two {
    order: 2;
    padding-bottom: 0;
    text-align: center;
  }
  
  .three {
    order: 3;
    justify-content: flex-end;
  }
  
  .header-item.desktop-only {
    display: none !important;
  }
  
  .header-item.mobile-only {
    display: flex !important;
  }
  
  .header__search {
    display: none !important;
  }
  
  button.header__search-opener {
    display: none;
  }
  
  .announce-bar {
    display: none;
  }
}

@media (max-width: 768px) {
  .cus-header {
    padding-top: 10px;
    padding-bottom: 10px;
  }
  
  .header__title {
    font-size: 12px;
    padding: 1rem 10px;
  }
  
  .mobile-drawer {
    width: 85%;
  }
}

@media (max-width: 480px) {
  .mobile-drawer {
    width: 90%;
  }
  
  .menu-header {
    padding: 15px 10px;
  }
  
  .menu-content {
    padding: 10px;
  }
  
  .mobile-menu-link {
    padding: 14px 0;
    font-size: 14px;
  }
}
