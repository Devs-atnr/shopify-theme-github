<script>
// =============================================
// MOBILE HAMBURGER MENU JS - COMPLETE & WORKING
// =============================================
document.addEventListener('DOMContentLoaded', function() {
  
  // ========== ELEMENTS ==========
  const hamburgerBtn = document.getElementById('hamburger-btn');
  const mobileDrawer = document.getElementById('mobile-drawer');
  const drawerOverlay = document.getElementById('drawer-overlay');
  const levelIndicators = document.getElementById('level-indicators');
  
  if (!hamburgerBtn || !mobileDrawer) {
    console.error('Required elements not found');
    return;
  }
  
  console.log('Mobile menu script loaded');
  
  // ========== STATE VARIABLES ==========
  let currentLevel = 0;
  const menuHistory = [];
  const megaMenuData = {};
  
  // ========== INITIALIZE ==========
  initializeMobileMenu();
  
  // ========== MAIN FUNCTIONS ==========
  function initializeMobileMenu() {
    // Collect mega menu data
    collectMegaMenuData();
    
    // Setup event listeners
    setupEventListeners();
    
    console.log('Mobile menu initialized');
  }
  
  function collectMegaMenuData() {
    const megaItems = document.querySelectorAll('.main-nav-item-mega.has-mega');
    
    megaItems.forEach((item) => {
      const link = item.querySelector('a');
      const menuTitle = link?.textContent.trim();
      const megaPanel = item.querySelector('.mega-menu-panel');
      
      if (menuTitle && megaPanel) {
        const parents = [];
        const parentElements = megaPanel.querySelectorAll('.mega-parent li');
        
        parentElements.forEach((parentLi, parentIndex) => {
          const parentLink = parentLi.querySelector('.mega-link');
          const parentTitle = parentLink?.textContent.trim();
          const parentUrl = parentLink?.href;
          const hasChildren = parentLi.classList.contains('has-children');
          
          // Get children for this parent
          const children = [];
          const childList = megaPanel.querySelector(`.mega-child[data-parent="${parentIndex}"]`);
          
          if (childList) {
            childList.querySelectorAll('li').forEach((childLi, childIndex) => {
              const childLink = childLi.querySelector('.mega-link');
              const childTitle = childLink?.textContent.trim();
              const childUrl = childLink?.href;
              const hasGrandchildren = childLi.classList.contains('has-grandchildren');
              
              // Get grandchildren for this child
              const grandchildren = [];
              const grandchildList = megaPanel.querySelector(
                `.mega-grandchild[data-parent="${parentIndex}"][data-child="${childIndex}"]`
              );
              
              if (grandchildList) {
                grandchildList.querySelectorAll('li a').forEach(grandLink => {
                  grandchildren.push({
                    title: grandLink.textContent.trim(),
                    url: grandLink.href
                  });
                });
              }
              
              children.push({
                title: childTitle,
                url: childUrl,
                hasChildren: hasGrandchildren,
                grandchildren: grandchildren
              });
            });
          }
          
          parents.push({
            title: parentTitle,
            url: parentUrl,
            hasChildren: hasChildren,
            children: children
          });
        });
        
        megaMenuData[menuTitle] = {
          title: menuTitle,
          parents: parents
        };
      }
    });
    
    console.log('Mega menu data collected:', Object.keys(megaMenuData));
  }
  
  function setupEventListeners() {
    // Hamburger button
    hamburgerBtn.addEventListener('click', toggleDrawer);
    
    // Overlay close
    drawerOverlay.addEventListener('click', closeDrawer);
    
    // Escape key close
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && mobileDrawer.classList.contains('active')) {
        closeDrawer();
      }
    });
    
    // Prevent body scroll when drawer is open
    document.addEventListener('touchmove', function(e) {
      if (mobileDrawer.classList.contains('active')) {
        e.preventDefault();
      }
    }, { passive: false });
  }
  
  // ========== DRAWER FUNCTIONS ==========
  function toggleDrawer() {
    if (mobileDrawer.classList.contains('active')) {
      closeDrawer();
    } else {
      openDrawer();
    }
  }
  
  function openDrawer() {
    hamburgerBtn.classList.add('active');
    mobileDrawer.classList.add('active');
    drawerOverlay.classList.add('active');
    document.body.style.overflow = 'hidden';
    
    // Load main menu
    loadMainMenu();
  }
  
  function closeDrawer() {
    hamburgerBtn.classList.remove('active');
    mobileDrawer.classList.remove('active');
    drawerOverlay.classList.remove('active');
    document.body.style.overflow = '';
    
    // Reset state
    currentLevel = 0;
    menuHistory.length = 0;
    updateLevelIndicators(0);
  }
  
  // ========== MENU NAVIGATION ==========
  function loadMainMenu() {
    currentLevel = 0;
    menuHistory.length = 0;
    
    const mainMenuLinks = document.querySelectorAll('.main-nav-mega .main-nav-item-mega > a');
    let menuHTML = '';
    
    if (mainMenuLinks.length === 0) {
      menuHTML = '<p style="padding: 20px; text-align: center;">No menu items found</p>';
    } else {
      menuHTML = '<ul class="mobile-menu-list">';
      
      mainMenuLinks.forEach((link) => {
        const title = link.textContent.trim();
        const url = link.href;
        const hasMega = link.closest('.main-nav-item-mega').classList.contains('has-mega');
        
        menuHTML += `
          <li class="mobile-menu-item">
            <button class="mobile-menu-link ${hasMega ? 'has-children' : ''}" 
                    data-title="${title}"
                    data-has-mega="${hasMega}"
                    ${!hasMega ? `onclick="window.location.href='${url}'"` : ''}>
              ${title}
              ${hasMega ? '<span class="arrow">›</span>' : ''}
            </button>
          </li>
        `;
      });
      
      menuHTML += '</ul>';
    }
    
    showLevel(0, 'Menu', menuHTML);
    updateLevelIndicators(0);
    
    // Add event listeners for mega menu items
    setTimeout(() => {
      document.querySelectorAll('.mobile-menu-link.has-children').forEach(link => {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          const title = this.getAttribute('data-title');
          navigateToLevel(1, title);
        });
      });
    }, 50);
  }
  
  function navigateToLevel(level, title, parentIndex = null, childIndex = null) {
    console.log(`Navigate to level ${level}: ${title}`);
    
    // Add to history if moving forward
    if (level > currentLevel) {
      menuHistory.push({
        level: currentLevel,
        title: getCurrentTitle(),
        parentIndex: parentIndex,
        childIndex: childIndex
      });
    }
    
    // Hide current level
    const currentLevelEl = document.getElementById(`level-${currentLevel}`);
    if (currentLevelEl) {
      currentLevelEl.classList.remove('active');
    }
    
    // Generate content for new level
    let content = '';
    let backTitle = 'Back';
    
    if (level === 1) {
      // Level 1: Mega menu parents
      const megaData = megaMenuData[title];
      if (!megaData) {
        console.error('No mega data found for:', title);
        return;
      }
      
      content = '<ul class="mobile-menu-list">';
      
      megaData.parents.forEach((parent, index) => {
        content += `
          <li class="mobile-menu-item">
            <button class="mobile-menu-link ${parent.hasChildren ? 'has-children' : ''}" 
                    data-parent-index="${index}"
                    data-menu-title="${title}"
                    ${!parent.hasChildren ? `onclick="window.location.href='${parent.url || '#'}'"` : ''}>
              ${parent.title || 'Untitled'}
              ${parent.hasChildren ? '<span class="arrow">›</span>' : ''}
            </button>
          </li>
        `;
      });
      
      content += '</ul>';
      backTitle = 'Menu';
      
    } else if (level === 2 && parentIndex !== null) {
      // Level 2: Children
      const megaData = megaMenuData[title];
      if (!megaData || !megaData.parents[parentIndex]) return;
      
      const parent = megaData.parents[parentIndex];
      content = '<ul class="mobile-menu-list">';
      
      parent.children.forEach((child, index) => {
        content += `
          <li class="mobile-menu-item">
            <button class="mobile-menu-link ${child.hasChildren ? 'has-children' : ''}" 
                    data-child-index="${index}"
                    data-parent-index="${parentIndex}"
                    data-menu-title="${title}"
                    ${!child.hasChildren ? `onclick="window.location.href='${child.url || '#'}'"` : ''}>
              ${child.title || 'Untitled'}
              ${child.hasChildren ? '<span class="arrow">›</span>' : ''}
            </button>
          </li>
        `;
      });
      
      content += '</ul>';
      backTitle = title;
      
    } else if (level === 3 && parentIndex !== null && childIndex !== null) {
      // Level 3: Grandchildren
      const megaData = megaMenuData[title];
      if (!megaData || !megaData.parents[parentIndex]) return;
      
      const parent = megaData.parents[parentIndex];
      const child = parent.children[childIndex];
      if (!child) return;
      
      content = '<ul class="mobile-menu-list">';
      
      child.grandchildren.forEach((grandchild, index) => {
        content += `
          <li class="mobile-menu-item">
            <a href="${grandchild.url || '#'}" class="mobile-menu-link">
              ${grandchild.title || 'Untitled'}
            </a>
          </li>
        `;
      });
      
      content += '</ul>';
      backTitle = parent.title || 'Back';
    }
    
    // Show new level
    showLevel(level, title, content, backTitle);
    currentLevel = level;
    updateLevelIndicators(level);
    
    // Add event listeners for new level
    setTimeout(() => {
      const newLevelEl = document.getElementById(`level-${level}`);
      if (newLevelEl) {
        // Level 1: Parent items
        newLevelEl.querySelectorAll('[data-parent-index]').forEach(item => {
          item.addEventListener('click', function(e) {
            if (this.classList.contains('has-children')) {
              e.preventDefault();
              const parentIdx = parseInt(this.getAttribute('data-parent-index'));
              const menuTitle = this.getAttribute('data-menu-title');
              navigateToLevel(2, menuTitle, parentIdx);
            }
          });
        });
        
        // Level 2: Child items
        newLevelEl.querySelectorAll('[data-child-index]').forEach(item => {
          item.addEventListener('click', function(e) {
            if (this.classList.contains('has-children')) {
              e.preventDefault();
              const childIdx = parseInt(this.getAttribute('data-child-index'));
              const parentIdx = parseInt(this.getAttribute('data-parent-index'));
              const menuTitle = this.getAttribute('data-menu-title');
              navigateToLevel(3, menuTitle, parentIdx, childIdx);
            }
          });
        });
      }
    }, 50);
  }
  
  function showLevel(level, title, content, backTitle = 'Back') {
    // Remove existing level if any
    const existingLevel = document.getElementById(`level-${level}`);
    if (existingLevel) {
      existingLevel.remove();
    }
    
    // Create new level
    const levelEl = document.createElement('div');
    levelEl.className = 'mobile-menu-level';
    levelEl.id = `level-${level}`;
    levelEl.setAttribute('data-level', level);
    
    levelEl.innerHTML = `
      <div class="menu-header">
        <button class="back-btn" onclick="goBack(${level})">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          ${backTitle}
        </button>
        <h3 class="menu-title">${title}</h3>
      </div>
      <div class="menu-content">
        ${content}
      </div>
    `;
    
    // Add to drawer
    mobileDrawer.appendChild(levelEl);
    
    // Make it active
    levelEl.classList.add('active');
  }
  
  // ========== BACK NAVIGATION ==========
  window.goBack = function(fromLevel) {
    console.log(`goBack called from level ${fromLevel}`);
    console.log('History:', menuHistory);
    
    if (fromLevel === 0) {
      closeDrawer();
      return;
    }
    
    // Get previous state
    const prevState = menuHistory.pop();
    
    if (!prevState) {
      // No history, go to main menu
      loadMainMenu();
      return;
    }
    
    // Hide current level
    const currentLevelEl = document.getElementById(`level-${fromLevel}`);
    if (currentLevelEl) {
      currentLevelEl.classList.remove('active');
    }
    
    // Show previous level
    if (prevState.level === 0) {
      loadMainMenu();
    } else if (prevState.level === 1) {
      navigateToLevel(1, prevState.title);
    } else if (prevState.level === 2) {
      navigateToLevel(2, prevState.title, prevState.parentIndex);
    }
  };
  
  // ========== HELPER FUNCTIONS ==========
  function getCurrentTitle() {
    const currentLevelEl = document.getElementById(`level-${currentLevel}`);
    if (currentLevelEl) {
      const titleEl = currentLevelEl.querySelector('.menu-title');
      return titleEl ? titleEl.textContent : '';
    }
    return '';
  }
  
  function updateLevelIndicators(level) {
    if (!levelIndicators) return;
    
    if (level > 0) {
      levelIndicators.style.display = 'flex';
      levelIndicators.querySelectorAll('.level-dot').forEach((dot, index) => {
        dot.classList.toggle('active', index === level);
      });
    } else {
      levelIndicators.style.display = 'none';
    }
  }
  
