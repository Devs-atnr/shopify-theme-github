  document.querySelectorAll('.main-nav-item-mega.has-mega').forEach(function(item) {
    const panel = item.querySelector('.mega-menu-panel');
    if (!panel) return;

    item.addEventListener('mouseenter', () => {
      document.querySelectorAll('.mega-menu-panel').forEach(p => p.classList.remove('is-open'));
      panel.classList.add('is-open');
    });

    item.addEventListener('mouseleave', () => {
      panel.classList.remove('is-open');
    });
  });

  // PARENT → CHILD
  document.querySelectorAll('.mega-parent li').forEach(function(parentLi) {
    parentLi.addEventListener('mouseenter', function () {
      let parentIndex = parentLi.getAttribute('data-parent');
      let panel = parentLi.closest('.mega-menu-panel');

      panel.querySelectorAll('.mega-parent li').forEach(li => li.classList.remove('is-active'));
      parentLi.classList.add('is-active');

      panel.querySelectorAll('.mega-child').forEach(ul => {
        ul.classList.toggle('is-active', ul.getAttribute('data-parent') === parentIndex);
      });

      let firstChild = panel.querySelector('.mega-child[data-parent="' + parentIndex + '"] li');
      panel.querySelectorAll('.mega-child li').forEach(li => li.classList.remove('is-active'));

      if (firstChild) {
        firstChild.classList.add('is-active');
        let childIndex = firstChild.getAttribute('data-child');

        panel.querySelectorAll('.mega-grandchild').forEach(ul => {
          ul.classList.toggle(
            'is-active',
            ul.getAttribute('data-parent') === parentIndex &&
            ul.getAttribute('data-child') === childIndex
          );
        });
      } else {
        panel.querySelectorAll('.mega-grandchild').forEach(ul => ul.classList.remove('is-active'));
      }
    });
  });

  // CHILD → GRANDCHILD
  document.querySelectorAll('.mega-child li').forEach(function(childLi) {
    childLi.addEventListener('mouseenter', function () {
      let parentIndex = childLi.getAttribute('data-parent');
      let childIndex = childLi.getAttribute('data-child');
      let panel = childLi.closest('.mega-menu-panel');

      panel.querySelectorAll('.mega-child li').forEach(li => li.classList.remove('is-active'));
      childLi.classList.add('is-active');

      panel.querySelectorAll('.mega-grandchild').forEach(ul => {
        ul.classList.toggle(
          'is-active',
          ul.getAttribute('data-parent') === parentIndex &&
          ul.getAttribute('data-child') === childIndex
        );
      });
    });
  });
});
