{%- style -%}
/* mega menu css */

.hamburger-btn.active {
    left: 265px;
    bottom: 20px;
}
ul.mega-child {
    text-align: left;
}
.mega-link {
  text-decoration: none;
  color: inherit;
  display: inline-block;
}

.mega-link:hover {
  text-decoration: none;
}

/* Child items with grandchildren + Parents with children */
.mega-child li.has-grandchildren,
.mega-parent li.has-children {
  position: relative;
  padding-right: 18px;
}

.mega-child li.has-grandchildren::after,
.mega-parent li.has-children::after {
  content: "›";
  position: absolute;
  right: 0;
  top: 0;
  color: #a2732a;
  font-size: 14px;
  opacity: 0.7;
  transition: 0.2s;
}

.mega-child li.has-grandchildren:hover::after,
.mega-parent li.has-children:hover::after {
  transform: translateX(3px);
  opacity: 1;
}

.main-nav-mega {
  display: flex;
  justify-content: center;
  gap: 2.5rem;
  list-style: none;
  margin: 0 0 10px;
}
.main-nav-item-mega > a {
  text-decoration: none;
  text-transform: uppercase;
  font-size: 13px;
  font-weight: 400;
  color: #000;
  padding: 10px 0;
  display: inline-block;
}
.main-nav-item-mega.has-mega > a {
  position: relative;
}
.main-nav-item-mega.has-mega > a::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 0;
  height: 1px;
  background: #000;
  transition: width .2s ease;
}
.main-nav-item-mega.has-mega:hover > a::after {
  width: 100%;
}

.mega-menu-panel {
  position: absolute;
  left: 0;
  top: 100%;
  width: 100%;
  background: #fff;
  padding: 24px 40px 30px;
  box-shadow: 0 15px 35px rgba(0,0,0,.08);
  border-top: 1px solid #eee;
  opacity: 0;
  pointer-events: none;
  transform: translateY(8px);
  transition: opacity .18s ease, transform .18s ease;
  z-index: 40;
}
.mega-menu-panel.is-open {
  opacity: 1;
  pointer-events: auto;
  transform: translateY(0);
}

.mega-menu-shell {
  position: relative;
}

.mega-columns {
  display: grid;
  grid-template-columns: 220px 220px 1fr;
  gap: 40px;
}

.mega-parent,
.mega-child,
.mega-grandchild {
  list-style: none;
  padding: 0;
  margin: 0;
  text-align:left;
}

.mega-parent li,
.mega-child li {
  cursor: pointer;
  padding: 4px 0;
  font-size: 13px;
}

.mega-parent li.is-active,
.mega-child li.is-active {
  font-weight: 600;
  color: #000;
}

.mega-parent li:hover,
.mega-child li:hover {
  color: #a2732a;
}

.mega-grandchild li a {
  display: block;
  padding: 3px 0;
  font-size: 13px;
  text-decoration: none;
  color: #444;
}

.mega-grandchild li a:hover {
  color: #a2732a;
}

.mega-child,
.mega-grandchild {
  display: none;
}
.mega-child.is-active,
.mega-grandchild.is-active {
  display: block;
}

/* header layout css */
.header__search { 
  display: none; 
}

.header-search-form {
  display: flex;
  align-items: center;
  border-radius: 0px;
  padding: 0.25rem 0.5rem;
  max-width: 300px;
  background-color: #f9f9f9;
  box-shadow: rgba(0, 0, 0, 0.05) 0px 6px 24px 0px,
              rgba(0, 0, 0, 0.08) 0px 0px 0px 1px;
}

.header-search-input {
  flex-grow: 1;
  border: none;
  background: transparent;
  padding: 0.5rem;
  font-size: 1.3rem;
  color: #555;
  font-family: 'Nunito Sans';
  font-weight: 400;
}

.header-search-input::placeholder {
  color: #999;
}

.header-search-input:focus {
  outline: none;
}

.header-search-button {
  background: #000000;
  border: none;
  cursor: pointer;
  padding: 5px;
  margin-left: 0.5rem;
  display: flex;
  align-items: center;
}

.search-icon {
  width: 20px;
  height: 20px;
  fill: #fff;
}

.parentt {
  display: grid;
  justify-content: center;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 1rem;
}

.three {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.two {
  text-align: center;
  padding-bottom: 10px;
}

.cus-header {
  background-color: {{ section.settings.bg_color }};
  color: {{ section.settings.text_color }};
  text-align: center;
  position: relative;
}

.announce-bar {
  background-color: #A2732A;
}

.one {
