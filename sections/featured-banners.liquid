{% schema %}
{
  "name": "Dual Promo Banners",
  "settings": [],
  "blocks": [
 
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
    {  "type": "text",
     "id": "custom_class",
     "label": "Custom CSS Class (optional)" },

        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Your Heading"
        },
       
        {
          "type": "url",
          "id": "link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop now"
        }
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [
    {
      "name": "Dual Promo Banners",
      "category": "Image"
    }
  ]
}
{% endschema %}
  {% comment %} <img src="{{ block.settings.image | image_url: width: 800 }}" > {% endcomment %}
<div class="dual-banners page-width">
  {% for block in section.blocks %}
    <div class="bannero {{ block.settings.custom_class }}" >
     <img src="{{ block.settings.image | image_url: master }}" >

        <h2 class="heading">{{ block.settings.heading }}</h2>
        <a href="{{ block.settings.link }}" class="buttono">{{ block.settings.button_text }}</a>
      
    </div>

    
  {% endfor %}
</div>

<style>
  .bannero img {
    object-fit: cover;
    width: 100%;
}
  .bannero .heading {
    font-size: 2rem;
    font-weight: 400;
    margin-bottom: 30px;
}
.dual-banners {
  display: flex;
  flex-wrap: nowrap;
  gap: 20px;
  margin-bottom: 85px;
   /* margin: 30px 0;  */
  /* padding: 0px 75px; */
}

  {% comment %} .bannero:hover {
opacity: 1;
 
} {% endcomment %}
.bannero {
    position: relative;
  z-index: 2;
    flex: 1 1 48%;
    min-height: 790px;
    background-size: cover;
    background-position: center;
    border-radius: 0px;
    overflow: hidden;
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: center; /* Centers horizontally */
transition: 0.3s ease-in-out;
}

 /* Pseudo-element for black overlay */
{% comment %} .bannero::before {
    content: '';
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0); /* Transparent by default */
    transition: background-color 0.3s ease-in-out;
    z-index: 0;
} {% endcomment %}

/* Add black overlay on hover */
{% comment %} .bannero:hover::before {
    background-color: rgb(0 0 0 / 58%); /* Black at 50% opacity */
}  {% endcomment %}

.bannero-overlay {
    text-align: center;
    color: white;
    margin-bottom: 20px;
    color: white;
    max-width: 100%;
    text-align: center;
   z-index: 1;
}

.bannero-overlay .heading {
  color: white;  
  font-size: 3.25rem;
    line-height: 4rem;
    font-weight: 400;
    margin-bottom: 45px;
      width: 330px;
    /* font-family: 'Josefin Sans', sans-serif; */
    /* padding-left: 125px;
    padding-right: 125px; */
}

.bannero-overlay .subtext {
  font-size: 1rem;
  margin-bottom: 10px;
}

.bannero-overlay .buttono {
    background: Transparent;

    color: #000 !important;
    transition: 0.3s;
    text-align: center;


}
a.buttono {     
   color: #000 !important;
  border-bottom: 1px solid;
    text-transform: uppercase;
    font-weight: 500;
    font-size: 15px;
    line-height: 15px;  }

{% comment %} .bannero-overlay .button:hover {
  background: #000000;
  border: 2px solid #000000;
} {% endcomment %}

/* Mobile responsiveness */
@media screen and (max-width: 768px) {
  .bannero .heading {
    font-size: 1.8rem;
    text-align: center;
   
}
  .bannero-overlay .heading {
   font-size: 2.25rem; 
   line-height: 3rem;
    width: 100%;
   
}
  .dual-banners {
    /* flex-direction: column; */
    flex-wrap: wrap;
    margin-bottom: 40px;
  }

  .bannero {
    flex: 1 1 48%;
    min-height: 290px;
    padding: 20px;
  }

  .bannero-overlay {
    bottom: 15px;
    left: 15px;
  }
}


  @media (min-width: 769px) and (max-width: 1024px) {
 .bannero-overlay .heading {
   font-size: 2.25rem; 
   line-height: 3rem;
