{%- endschema -%}

{%- style -%}
.image-collection {
  padding: 50px 0;
  text-align: center;
}

.image-collection__heading {
  margin-bottom: 30px;
  font-size: 2.5rem;
}

.image-collection__grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.image-collection__item {
  position: relative;
  overflow: hidden;
  /* border-radius: 8px; */
  aspect-ratio: 1/1;
}

.image-collection__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.image-collection__overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  opacity: 0;
  transition: opacity 0.3s ease;
  padding: 20px;
  text-align: center;
}

.image-collection__item:hover .image-collection__overlay {
  opacity: 1;
}

.image-collection__item:hover .image-collection__image {
  transform: scale(1.05);
}

.image-collection__title {
  font-size: 1.5rem;
  margin-bottom: 10px;
  font-weight: bold;
}

.image-collection__subtitle {
  font-size: 1rem;
}

@media screen and (max-width: 1024px) {
  .image-collection__grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media screen and (max-width: 768px) {
  .image-collection__grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media screen and (max-width: 480px) {
  .image-collection__grid {
    grid-template-columns: 1fr;
  }
  
  .image-collection__heading {
    font-size: 2rem;
  }
}
{%- endstyle -%}

<div class="image-collection">
  {% if section.settings.heading != blank %}
    <h2 class="image-collection__heading">{{ section.settings.heading }}</h2>
  {% endif %}
  
  <div class="image-collection__grid">
    {% for block in section.blocks %}
      <div class="image-collection__item" {{ block.shopify_attributes }}>
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}">
        {% endif %}
        
        {% if block.settings.image != blank %}
          <img 
            src="{{ block.settings.image | img_url: '600x600' }}" 
            alt="{{ block.settings.image.alt | escape }}" 
            class="image-collection__image"
            loading="lazy"
            width="600"
            height="600"
          >
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'image-collection__image' }}
        {% endif %}
        
        <div class="image-collection__overlay">
          {% if block.settings.title != blank %}
            <h3 class="image-collection__title">{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.subtitle != blank %}
            <p class="image-collection__subtitle">{{ block.settings.subtitle }}</p>
          {% endif %}
        </div>
        
        {% if block.settings.link != blank %}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>