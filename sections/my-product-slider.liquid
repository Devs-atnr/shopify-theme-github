<style>
.carousel-container {
    position: relative;
    width: 100%;
    overflow: hidden;
    margin: 8em 0px;
  }

  .carousel-wrapper {
    display: flex;
    transition: transform 0.5s ease;
  }
  .theWishList{
    position: absolute;
    top: 10px;
    left: 10px;
    z-index: 9;
  }
  .carousel-card {
    position: relative;
    flex: 0 0 100%; /* Adjust the card width as a percentage for responsiveness */
    /* max-width: 200px; Set a maximum width for the card */
    max-width: 251.2px;
    margin: 0 35px 0 0px;
    text-align: center! important;
    border-radius: 0.25rem;
    overflow: hidden;
    border-width: 1px;
    border-color:#f7f7f7;
  }

  .carousel-card:focus, .carousel-card:hover{
    box-shadow: 0 14px 25px -8px #0000001a;
    --tw-translate-x: 0;
    --tw-translate-y: 0;
    --tw-rotate: 0;
    --tw-skew-x: 0;
    --tw-skew-y: 0;
    --tw-scale-x: 1;
    --tw-scale-y: 1;
      transition-duration: .5s;
      transform: translate(var(--tw-translate-x)) translateY(var(--tw-translate-y)) rotate(var(--tw-rotate)) skew(var(--tw-skew-x)) skewY(var(--tw-skew-y)) scaleX(var(--tw-scale-x)) scaleY(var(--tw-scale-y));
    --tw-translate-y: -.5rem;
  }

  .carousel-card a{
    font-size: .875rem !important;
    font-weight: 400;
    color:#656a67;
    margin: 0;
    line-height: 45px;
  }
  .carousel-card a:focus, .carousel-card a:hover{
      outline: 2px solid transparent;
      text-decoration: none;
      outline-offset: 2px;
  }
  .carousel-arrows {
    position: absolute;
    top: 22%;
    transform: translateY(-50%);
    width: 100%;
    display: flex;
    justify-content: space-between;
  }

  .carousel-arrow {
    cursor: pointer;
    padding: 4px 8px;
    background-color: #ffffff8c;
    color: #000;
    border: 1px solid #b1b1b1;
    border-radius: 5px;
    box-shadow: 0px 0px 5px #b1b1b1;
  }
  .carousel-arrow .fa-solid{
    font-size:14px;
  }
  
  .imageCls{
    background-color:#f9fafb;
    padding:30px;
    height:200px;
  }
  .imageCls img{
    width: 100%;
    margin: 0 auto;
    object-fit: contain;
    height: 100%;
    mix-blend-mode: multiply;
  }

  .lowerDiv{
    padding: 10px 0;
    border-top:1px solid #f7f7f7;
  }
  .lowerDiv p{
    font-size:12px;
    color:#514e4e;
    margin:0;
    line-height: 20px;
  }
  
</style>


<!-- HTML Structure -->
<div class="carousel-container">
  <div class="carousel-wrapper" id="carouselWrapper">
    <!-- Product Cards Generated Dynamically -->
  </div>

  <div class="carousel-arrows">
    <!-- Navigation Arrows -->
    <button class="carousel-arrow" onclick="prevSlide()"><i class="fas fa-chevron-left"></i></button>
    <button class="carousel-arrow" onclick="nextSlide()"><i class="fas fa-chevron-right"></i></button>
  </div>
</div>

{% for product in collections.all.products limit: 6 %}
  <div class="carousel-card">
    <img src="{{ product.images[0].src | product_img_url: 'large' }}" alt="{{ product.title }}">
    <h3>{{ product.title }}</h3>
    <p>SKU: {{ product.variants.first.sku }}</p>
    <p>Price: ${{ product.variants.first.price | money }}</p>
  </div>
{% endfor %}


<script>
  const carouselWrapper = document.getElementById('carouselWrapper');
let currentIndex = 0;

function showSlide(index) {
  const slideWidth = carouselWrapper.querySelector('.carousel-card').offsetWidth;
  carouselWrapper.style.transform = `translateX(${-index * slideWidth}px)`;
}

function nextSlide() {
  if (currentIndex < {{ collections.all.products.size | minus: 1 }}) {
    currentIndex++;
    showSlide(currentIndex);
  }
}

function prevSlide() {
  if (currentIndex > 0) {
    currentIndex--;
    showSlide(currentIndex);
  }
}
</script>


